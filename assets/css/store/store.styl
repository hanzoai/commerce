body
  color rgb(46,46,46)
  font-family 'proxima-nova', sans-serif
  font-size 15px
  line-height 1.6em
  letter-spacing 0px
  font-weight 400
  font-style normal

select, input
  font-size 100%

a:link
  text-decoration none

a:visited
  text-decoration none

a:hover
  text-decoration none

a:active
  text-decoration none

.header
  width 100%
  position fixed
  top 0px
  left 0px
  background-color #000
  display block
  z-index 10

.title-nav
  padding 2px 100px
  max-width 1200px
  font-size 15px
  display table
  width 100%
  margin 0 auto
  vertical-align middle
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  .logo
    display block
    margin-bottom 3px

.nav
  display table-cell
  width 70%
  text-align right
  vertical-align middle
  .links
    margin 0
    padding 0
    list-style none
    text-align right
    line-height 1em
    .link
      text-align right
      display inline-block
      margin 0 0 0 30px
      a
        color #fff
        font-family "proxima-nova"
        font-size .85em
        text-transform uppercase
        letter-spacing 2px
        font-weight 400
        font-style normal
        line-height 2em
      a.current
        color #c2c2c2
      a.big
        display block
        background #d70404
        font-size 15px
        padding 12px 30px
        text-align center
        margin auto
        max-width 350px
        line-height 1em
        letter-spacing 0px
        font-weight 400
        font-style normal

.content-header
  margin-top 80px
  width 100%
  text-align center
  h1
    padding 36px 0

h1
  font-family "Michroma"
  font-size 2.2em
  line-height 1em
  text-transform uppercase
  text-decoration none
  letter-spacing 2px
  font-weight 400
  font-style normal
  max-width 100%
  display inline-block

h2
  font-family "Michroma"
  font-size 1.2em
  line-height 1em
  text-transform uppercase
  text-decoration none
  letter-spacing 2px
  font-weight 400
  font-style normal
  max-width 100%
  display inline-block

.content
  width 75%
  margin 0 auto
  display table

// Not part of the outer frame
.item
  display table
  width 100%
  padding 10px 0

.product-viewer
  text-align center
  .preview-background
    max-width 600px
    background-size contain
    background-repeat no-repeat
    width 90%
  .preview
    max-width 600px
    width 100%

  .gallery
    .thumbnail
      max-width 40px
      max-height 40px
      margin 0 5px
      padding 5px
      border 1px solid #fff
      float left
    .thumbnail.selected
      border-color #c2c2c2
    .thumbnail:hover
      border-color rgb(39,39,39)

@media all and ( min-width: 1000px )
  body .product-text .product-body
    padding-left 70px

.product-text
  margin-top 50px
  .product-title
    width 100%
    display inline-block
    .product-name
      width 65%
    .product-cost
      display inline-block
  .product-body
    padding 20px 10px 0 0px
    .product-description
      margin-bottom 20px
    .product-config
      label
        display block
      select
        margin-bottom 15px

      input
        width 120px
        text-indent 5px
        .quantity
          float left

      .col-1-3
        height 100px

      .add-to-cart
        background-color rgb(39,39,39)
        color white
        text-transform uppercase
        display block
        float left
        font-size 1em
        min-width 100px
        text-align center
        padding 15px 50px
        margin-top 15px

.item
  border-top 1px solid rgb(203,203,203)

.footer
  width 100%
  background-color #171717
  position relative
  display table
  .top-link
    display block
    background-color #fff
    width 50px
    height 50px
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
    -webkit-border-radius 50%
    border-radius 50%
    position absolute
    left 50%
    margin-left -25px
    top -25px
    padding-top 2px
    a
      display block
      font-weight 600
      letter-spacing 2px
      font-size 12px
      text-align center
      line-height 1
      color #363636
      padding-left 2px
      padding-top 4px
    .text
      text-transform uppercase
    .top-arrow
      display block
      width 16px
      height 10px
      margin 4px auto 6px
  .footer-content
    margin 0px auto
    padding 37px 8%
    color #fff
    .grid
      display table
      width 100%
    max-width 960px
    .social
      display table
      width 100%
      .social-icons
        float right
        a
          width 36px
          height 36px
          background-color #fff
          border-radius 18px
          display inline-block
          position relative
          margin-left 9px
          img
            width 38px
            height 38px
            position absolute
            left -1px
            top -1px
    .footer-nav
      display table
      width 100%
      .links
        float right
        p
          text-align right
          margin 15px 0
        a
          color white
          text-decoration underline

// GRIDDING

@media all and ( min-width: 600px )
  .col-1-3
    display inline
    float left
    width 33%
  .col-2-3
    display inline
    float left
    width 66%
  .col-1-2
    display inline
    float left
    width 50%
@media all and ( min-width: 1000px )
  .product-viewer
    width 50%
    display inline
    float left
  .product-text
    width 50%
    display inline
    float left


