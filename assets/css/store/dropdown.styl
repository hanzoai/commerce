animate()
  transition: all .3s
  backface-visibility: hidden

font-stack()
  font-family: "proxima-nova"
  font-size: 0.85em
  text-transform: uppercase
  letter-spacing: 2px
  font-weight: 400
  font-style: normal
  line-height: 2em

dropdown()
  a, a:visited
    color:white
    font-stack()

  label,
  ul li
   display: block
   padding: 12px 18px
   text-align: left
   animate()

  label:hover,
  ul li:hover
   color: white
   cursor: pointer

  li
   font-family: "proxima-nova"
   text-transform: uppercase
   letter-spacing: 2px
   font-weight: 400
   font-style: normal
   line-height: 2em

  label
   z-index: 2
   font-stack()

  input
   display: none

  input ~ ul
   position: absolute
   visibility: hidden
   opacity: 0
   width: 130px
   z-index: 1
   background: #333
   margin-top: -10px
   height 0px

  input:checked + label
   color: white
   background: #222

  input:checked ~ ul
   visibility: visible
   opacity: 1
   position: absolute
   margin-top: 0px
   height auto
   animate()
