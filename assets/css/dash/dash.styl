integration
  .panel
    -webkit-transition: all 0.3s ease-in-out
    -moz-transition:  all 0.3s ease-in-out
    transition: all 0.3s ease-in-out

  .panel-body
    -webkit-transition: all 0.3s ease-in-out, border-width 0.3s step-start
    -moz-transition:  all 0.3s ease-in-out, border-width 0.3s step-start
    transition: all 0.3s ease-in-out, border-width 0.3s step-start
    max-height: 500px

    &.collapsed
      max-height: 0
      padding-top: 0
      padding-bottom: 0
      margin: 0
      border-width: 0
      overflow: hidden

      -webkit-transition: all 0.3s ease-in-out, border-width 0.3s step-end
      -moz-transition: all 0.3s ease-in-out, border-width 0.3s step-end
      transition: all 0.3s ease-in-out, border-width 0.3s step-end

