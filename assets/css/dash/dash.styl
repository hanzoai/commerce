.cs-integration, .cs-droparea
  img
    -moz-user-select: none /* These user-select properties are inheritable, used to prevent text selection */
    -webkit-user-select: none
    -ms-user-select: none /* From IE10 only */
    user-select: none /* Not valid CSS yet, as of July 2012 */
    -webkit-user-drag: none /* Prevents dragging of images/divs etc */
    user-drag: none
    pointer-events: none
    max-height:20px
    padding-right: 10px
    padding-left: 10px

.cs-droparea
  display: table
  width: 100%
  min-height: 200px
  position: relative

.cs-droparea-overlay:before
  display: block
  position: absolute
  top: -8px
  left: -8px
  bottom: -8px
  right: -8px

  content: ''
  border-radius: 4px
  border: 4px solid rgba(0,0,0,.4)

.cs-droparea-overlay
  display: block
  position: absolute
  top: 0px
  left: 0px

  margin: 4px

  width: 100%
  min-height: 300px
  height: 100%
  padding-top: 100px
  font-size: 4em

  border: 4px dashed #FFF

  color: #FFF
  text-align: center
  background-color: rgba(0,0,0,.4)

  -webkit-transition: all 0.2s ease-in-out
  -moz-transition: all 0.2s ease-in-out
  transition: all 0.2s ease-in-out

  opacity: 0
  z-index: -1

.cs-droparea.active

  .cs-droparea-overlay
    opacity: 1
    z-index: 1000

