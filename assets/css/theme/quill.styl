// Basic Framework stuff
body
  background-color primer
  font-family: Lato,Helvetica,Arial,sans-serif
  font-size: 18px
  line-height: 1.72222
  color: theme-dark-text

// Typography
b, strong
  font-weight: 700

.caret
  display: inline-block
  width: 0
  height: 0
  margin-left: 5px
  vertical-align: middle
  border-top: 8px solid
  border-right: 6px solid transparent
  border-left: 6px solid transparent
  transition: border-color .25s,color .25s

// Links
a
  color: theme-light
  text-decoration: none
  transition: 0.25s

a:hover
  color: theme-lighter

// Inputs
input[type=search]
  -webkit-appearance: none!important

input:focus,
select:focus,
textarea:focus,
button:focus
    outline: none;

input[type=text]::-ms-clear,
input[type=text]::-ms-reveal
  display: none;
  width: 0;
  height: 0;
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
  display: none;

button, select
  text-transform: none

button
  overflow: visiblei

button, input, optgroup, select, textarea
  margin: 0;
  font: inherit;
  color: inherit;

// Custom Dropdowns
.dropdown-menu
  font-size: 14px

.dropdown
  .caret
    margin-left: 8px
  > .dropdown-menu
    display: none

.dropdown.open
  > .dropdown-menu > li > a
    padding: 8px 16px
    line-height: 1.429
    color: theme-lesser-dark-text
    display: block
    clear: both
    font-weight: 400
    white-space: nowrap

// Forms
.form-group
  position: relative
  margin-bottom: 20px

.input-group
  position: relative
  display: table
  border-collapse: separate

  .form-control
    display: table-cell

.form-control
  transition: border .25s linear,color .25s linear,background-color .25s linear

.input-group-btn
  position: relative
  font-size: 0
  white-space: nowrap
  vertical-align: middle
  display: table-cell

.input-group-btn:last-child
  > .btn
    margin-left: -3px;
    border-left-width: 0;

.btn
  display: inline-block
  font-weight: 400;
  transition: border .25s linear,color .25s linear,background-color .25s linear;
  font-smoothing: subpixel-antialiased;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  cursor: pointer;
  user-select: none;

