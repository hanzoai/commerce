form-error(color)
  .error
    color: color !important

    input, select, textarea
      border-color: color !important

  input.error, select.error, textarea.error
    border-color: color !important

named-form()
  h2
    margin-top: 30px

  fieldset
    margin-top: 30px
    margin-bottom: 10px

  fieldset > div
    display: table
    width: 100%
    margin-bottom: 20px

    > :not(p)
      float: left

    button
      min-width: 120px

  label
    col(2/5)

  input[type="text"], input[type="password"], select, textarea
    width: 60%
    min-width: 150px
    max-width: 300px


