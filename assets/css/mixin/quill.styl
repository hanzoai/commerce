@import "node_modules/jeet/stylus/jeet"
@import "node_modules/rupture/rupture"

@import "shake"

// GUT UT DA WAY
jeet.gutter = 0px

bbox()
  box-sizing: border-box

rcol(ratios = 1, offset = 0, cycle = 0, uncycle = 0, gutter = jeet.gutter)
  col(ratios, offset, cycle, uncycle, gutter)
  float: right

col-stack(ratios = 1, threshold = 600px, offset = 0, cycle = 0, uncycle = 0, gutter = jeet.gutter)
  col(ratios, offset, cycle, uncycle, gutter)
  +below(threshold)
    stack()
