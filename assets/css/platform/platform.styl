@require './modal.styl'
@require './loader.styl'

.widget
  min-height: 100px

.table-viewport
  overflow: scroll
  height: 200px
  display: block

th.sortable
  cursor: pointer

.pad-bottom
  padding-bottom: 20px

.variant-option
  padding: 0 !important

h5.variant-option-header
  padding-left: 0

.btn-disabled
  opacity: .5
  cursor: default

.click-for-new
  input
    cursor: pointer !important

.panel-heading > a:after
  font-family:'Glyphicons Halflings'
  content:"\e114"
  float: right
  color: grey

.panel-heading > a.collapsed:after
  content:"\e080"

.selection .select2-selection
  height: 39px
  padding: 9px 4px

  .select2-selection__rendered
    line-height: inherit

  .select2-selection__arrow
    top: 6px
