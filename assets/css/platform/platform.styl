table-field
  textarea
    width: 100%

.status-message *
  text-align: center

.form-control-static
  overflow: auto

.table-responsive
  overflow: auto
  width: 100%

input.search
  &::-webkit-input-placeholder
    color: white

  &:-moz-placeholder
    color: white

