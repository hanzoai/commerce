    color: white

  &:-ms-input-placeholder
    color: white

.sidebar-menu > li.active > a > span:nth-child(1)
  color: #4CAAE6

.navbar.bg-dark .nav > li.open > a, .navbar.bg-dark .nav > li:hover > a, .navbar.bg-dark .nav > li:focus > a, .navbar.bg-dark .nav > li.active > a, .navbar.bg-dark .nav > li > a:hover, .navbar.bg-dark .nav > li > a:focus
  background-color: #444

.btn-dark
  background-color: #5D637B

.sortable .fa
  display: inline

.control-label
  text-align: left !important

.cs-nav-tabs
  margin-left: -20px
  margin-right: -20px
  margin-top: 2px
  margin-bottom: 20px
  padding-left: 15px

  .btn
    top: 1px
    background-color: #e8e8e8

    &.cs-selected
      background-color: #eee
      border-bottom: 1px solid #eee

#current-page
  display: table
  width: 100%

  .tray-right
    display: table-cell
    float: none
    vertical-align: top
    top: -25px
    right: -20px

    -webkit-transition: all 0.3s ease-in-out
    -moz-transition: all 0.3s ease-in-out
    transition: all 0.3s ease-in-out

    &.tray-hidden
      width: 0
      padding-left: 0 !important
      padding-right: 0 !important
      display: block
      right: -1000px

.cs-integration
  .btn
    background-color: #eee
    font-size: 1.1em

    &:active
      outline: none !important
      -webkit-box-shadow: none !important
      box-shadow: none !important

.cs-integration, .cs-droparea
  img
    -moz-user-select: none /* These user-select properties are inheritable, used to prevent text selection */
    -webkit-user-select: none
    -ms-user-select: none /* From IE10 only */
    user-select: none /* Not valid CSS yet, as of July 2012 */
    -webkit-user-drag: none /* Prevents dragging of images/divs etc */
    user-drag: none
    pointer-events: none
    max-height:20px

.cs-droparea
  display: table
  width: 100%
  min-height: 200px
  position: relative

.cs-droparea-overlay:before
  display: block
  position: absolute
  top: -8px
  left: -8px
  bottom: -8px
  right: -8px

  content: ''
  border-radius: 4px
  border: 4px solid rgba(0,0,0,.4)

.cs-droparea-overlay
  display: block
  position: absolute
  top: 0px
  left: 0px

  margin: 4px

  width: 100%
  min-height: 300px
  height: 100%
  padding-top: 100px
  font-size: 4em

  border: 4px dashed #FFF

  color: #FFF
  text-align: center
  background-color: rgba(0,0,0,.4)

  -webkit-transition: all 0.2s ease-in-out
  -moz-transition: all 0.2s ease-in-out
  transition: all 0.2s ease-in-out

  opacity: 0
  z-index: -1

.cs-droparea.active

  .cs-droparea-overlay
    opacity: 1
    z-index: 1000

.tray-center
  overflow: scroll;
  margin-right: -20px;
  padding-right: 20px;

.integration-toggle
  float: right
  margin-top: 13px

.fa
  &.warning
    color: #F6BB42
    position: relative
    top: 5px
    font-size: 1.5em

  &.integration-remove
    position: relative
    top: -18px
    cursor: pointer

    &:hover
      color: #888

integration
  .panel-body
    -webkit-transition: all 0.3s ease-in-out, border-width 0.3s step-start
    -moz-transition:  all 0.3s ease-in-out, border-width 0.3s step-start
    transition: all 0.3s ease-in-out, border-width 0.3s step-start
    max-height: 500px

    &.collapsed
      max-height: 0
      padding-top: 0
      padding-bottom: 0
      margin: 0
      border-width: 0
      overflow: hidden

      -webkit-transition: all 0.3s ease-in-out, border-width 0.3s step-end
      -moz-transition: all 0.3s ease-in-out, border-width 0.3s step-end
      transition: all 0.3s ease-in-out, border-width 0.3s step-end

