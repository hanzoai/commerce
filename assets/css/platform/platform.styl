@require './modal.styl'
@require './loader.styl'

*
  outline: none

.widget
  min-height: 100px

listing-widget .table-viewport
  overflow: scroll
  max-height: 400px
  display: block

.panel-viewport
  overflow: scroll
  max-height: 500px
  display: block

.table-viewport
  overflow: scroll
  height: 200px
  display: block

th.sortable
  cursor: pointer

.pad-bottom
  padding-bottom: 20px

.variant-option
  padding: 0 !important

h5.variant-option-header
  padding-left: 0

.btn-disabled
  opacity: .5
  cursor: default

.click-for-new
  input
    cursor: pointer !important

.panel-heading > a:after
  font-family:'Glyphicons Halflings'
  content:"\e114"
  float: right
  color: grey

.panel-heading > a.collapsed:after
  content:"\e080"

.selection .select2-selection
  height: 39px
  padding: 9px 4px

  .select2-selection__rendered
    line-height: inherit

  .select2-selection__arrow
    top: 6px

.pagination
  display: table
  margin: 0 auto

.pagination a
  height: auto !important
  padding: 5px 15px !important
  background-image: none !important

.pagination input
  width:125px !important
  display:inline !important
  padding-top:10px !important

.bg-dark
  background-color: #353738 !important

menu
  display: block
  margin: 0
  padding: 0

.map
  display: block
  height: 300px

.modal-content
  top: 200px

textarea
  resize: none
  border: 1px solid #ddd

textarea:focus
  border: 1px solid #5FAEE3

.panel .panel .panel-heading
  border-top: 0
  border-left: 0
  border-right: 0
  background-color: inherit

table-field
  textarea
    width: 100%

.status-message *
  text-align: center

.form-control-static
  overflow: auto

.table-responsive
  overflow: auto
  width: 100%

input.search
  &::-webkit-input-placeholder
    color: #999

  &:-moz-placeholder
    color: #999

  &::-moz-placeholder
    color: #999

  &:-ms-input-placeholder
    color: #999

.sidebar-menu > li.active > a > span:nth-child(1)
  color: white

.sidebar-menu > li.active > a > span:nth-child(2)
  font-weight: 400

.sidebar-menu > li > a > span:nth-child(2)
  font-weight: 300

.sidebar-menu > li > a
  color: #ddd
  font-size: 14px

.sidebar-menu > li.active > a
  color: white

.navbar.bg-dark .nav > li.open > a, .navbar.bg-dark .nav > li:hover > a, .navbar.bg-dark .nav > li:focus > a, .navbar.bg-dark .nav > li.active > a, .navbar.bg-dark .nav > li > a:hover, .navbar.bg-dark .nav > li > a:focus
  background-color: #444

.btn-dark
  background-color: #5D637B

.sortable .fa
  display: inline

.navbar-branding .navbar-brand
  font-weight: 300
  letter-spacing: .04em

.navbar .nav > li > a
  font-size: 13px
  font-weight: 300 !important
  letter-spacing: .04em

.panel-heading
  padding: 0px 16px

.navbar[class*="bg-"] .navbar-search.alt input
  background-color: rgba(255, 255, 255, 0.1)
  color: rgba(255, 255, 255, 0.95)

.select2-container--default .select2-selection--single
  border: 1px solid #ddd

.select2-container--default:active .select2-selection--single:active
  border: 1px solid #aaa

.select2-container--default.select2-container--open.select2-container--above .select2-selection--single, .select2-container--default.select2-container--open.select2-container--above .select2-selection--multiple
  border: 1px solid #aaa
