# Hanzo Commerce - Environment Configuration
# Copy to .env and configure for your deployment
#
# Required variables are marked with [REQUIRED]
# Optional variables have defaults shown

# ==============================================================================
# DEPLOYMENT SETTINGS
# ==============================================================================

# Environment: development, staging, production
ENV=staging

# Version tag for Docker images
VERSION=2.0.0

# Domain for service routing
DOMAIN=localhost

# Deployment color for blue-green (blue/green)
DEPLOY_COLOR=blue

# ==============================================================================
# COMMERCE CORE [REQUIRED]
# ==============================================================================

# Data directory (inside container)
COMMERCE_DIR=/app/data

# Development mode (true/false)
COMMERCE_DEV=false

# [REQUIRED] Encryption secret (generate with: openssl rand -hex 32)
COMMERCE_SECRET=

# HTTP port mapping
COMMERCE_PORT=8001

# ==============================================================================
# REDIS CACHE
# ==============================================================================

# Redis port mapping
REDIS_PORT=6379

# Redis password (optional but recommended for production)
REDIS_PASSWORD=

# ==============================================================================
# CLICKHOUSE ANALYTICS
# ==============================================================================

# ClickHouse ports
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000

# ClickHouse credentials
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# ==============================================================================
# IAM INTEGRATION (hanzo.id)
# ==============================================================================

# [REQUIRED for production] IAM service URL
IAM_URL=https://api.hanzo.id

# [REQUIRED for production] IAM API key for service-to-service auth
IAM_API_KEY=

# ==============================================================================
# PAYMENT PROCESSORS
# ==============================================================================

# Stripe configuration
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal configuration (optional)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_ENVIRONMENT=sandbox

# ==============================================================================
# EMAIL SERVICES
# ==============================================================================

# SendGrid API key (preferred)
SENDGRID_API_KEY=

# Mandrill API key (alternative)
MANDRILL_API_KEY=

# SMTP relay (fallback)
SMTP_RELAY_ENDPOINT=
SMTP_RELAY_USERNAME=
SMTP_RELAY_PASSWORD=

# ==============================================================================
# BLOCKCHAIN NODES (Optional)
# ==============================================================================

# Ethereum nodes
ETHEREUM_MAINNET_NODES=
ETHEREUM_TESTNET_NODES=

# Bitcoin nodes
BITCOIN_MAINNET_NODES=
BITCOIN_TESTNET_NODES=

# ==============================================================================
# EXTERNAL SERVICES
# ==============================================================================

# Netlify (for static deployments)
NETLIFY_ACCESS_TOKEN=
NETLIFY_SITE_ID=

# Cloudflare (for DNS/CDN)
CLOUDFLARE_EMAIL=
CLOUDFLARE_API_KEY=
CLOUDFLARE_ZONE=

# Facebook (for social features)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Google (for analytics/storage)
GOOGLE_API_KEY=
GOOGLE_STORAGE_BUCKET=

# ==============================================================================
# OBSERVABILITY
# ==============================================================================

# Sentry error tracking
SENTRY_DSN=

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# ==============================================================================
# NGINX/PROXY (when using proxy profile)
# ==============================================================================

# HTTP/HTTPS ports
HTTP_PORT=80
HTTPS_PORT=443

# TLS certificate paths (for production)
TLS_CERT_PATH=
TLS_KEY_PATH=

# ==============================================================================
# DIGITALOCEAN SPECIFIC (for DO App Platform)
# ==============================================================================

# DigitalOcean API token (for managed services)
DO_API_TOKEN=

# DigitalOcean Spaces (S3-compatible storage)
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_ENDPOINT=
DO_SPACES_BUCKET=

# DigitalOcean managed database connection strings
DO_DATABASE_URL=
DO_REDIS_URL=

# ==============================================================================
# BUILD METADATA (auto-populated by CI/CD)
# ==============================================================================

BUILD_TIME=
GIT_COMMIT=
